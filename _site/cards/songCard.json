{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Artist: "
                        },
                        {
                            "type": "TextBlock",
                            "text": "Song: "
                        },
                        {
                            "type": "TextBlock",
                            "text": "Album: "
                        },
                        {
                            "type": "Container",
                            "items": [{
                                "type": "ActionSet",
                                "actions": [{
                                    "type": "Action.OpenUrl",
                                    "title": "Open in browser",
                                    "url": "https://adaptivecards.io"
                                }]
                            }]
                        }
                    ],
                    "width": "stretch"
                }
                ,
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://upload.wikimedia.org/wikipedia/en/d/dc/Tame_Impala_-_Innerspeaker.png"
                        }
                    ],
                    "width": "stretch"
                }
            ]
        }
    ]
}